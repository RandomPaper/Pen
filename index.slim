doctype html
html
  head
    title Pen
    link href="css/application.css" rel="stylesheet" type="text/css"
  body
    input style="display:none;" id="saveDialog" type="file" nwsaveas='Pen-canvas.png'
    header#header
      nav.menu.menu-global
        ul
          li.js-menu-btn Pen
          li.global-icon.global-icon-close
          li.global-icon.global-icon-minimize
          li.global-icon.global-icon-maximize

      nav.menu.menu-theme
        ul.js-theme

      nav.menu.menu-tool
        ul
          li.js-paint-tool-btn
            i.icon.fa.fa-eraser

    #sideBar
      ul
        li: span.js-save-btn title='Save Image'
          i.fa.fa-save
        li: span.js-clear-all-btn title='Clear All'
          i.fa.fa-square-o

    #canvasDiv

    script src="js/jquery.js"
    script src="js/application.js"
